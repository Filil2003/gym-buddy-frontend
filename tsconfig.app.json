{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Projects */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",

    /* Modules */
    "baseUrl": "./src",
    "module": "ESNext",
    "paths": {
      "#pages/*": ["pages/*"],
      "#widgets/*": ["widgets/*"],
      "#features/*": ["features/*"],
      "#entities/*": ["entities/*"],
      "#shared/*": ["shared/*"]
    }
  },
  "include": ["src"]
}
